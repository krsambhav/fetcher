{
  "name": "Book Slots 2.0",
  "version": "2.0",
  "manifest_version": 3,
  "description": "Book Slots",

  "action": {
    "default_title": "Book Slots 2.0",
    "default_popup": "popup.html"
  },
  "background": {
    "service_worker": "background.js"
  },
  "permissions": [
    "scripting",
    "activeTab",
    "cookies"
  ],
  "content_scripts": [
    {
      "matches": [
        "https://www.usvisascheduling.com/*",
        "https://www.usvisascheduling.com/"
      ],
      "js": ["script.js"]
    }
  ],
  "host_permissions": ["https://www.kumarsambhav.me/", "*://*/*"]
}
